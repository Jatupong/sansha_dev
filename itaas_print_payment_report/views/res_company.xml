<odoo>
    <record id="view_company_form_add_payment_form_number" model="ir.ui.view">
        <field name="name">res.company.form.number</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="itaas_company_setting.view_company_form_itaas_inherit"/>
        <field name="arch" type="xml">

            <xpath expr="//notebook/page[@name='configuration']" position="inside">
                <group string="Payment">
                    <group>
                        <field name="receipt_no_form"/>
                        <field name="tax_inv_receipt_no_form"/>

                    </group>
                    <group>
                        <field name="show_currency_on_payment"/>
                        <field name="show_date_auto_payment"/>

                    </group>
                </group>

            </xpath>




        </field>
    </record>

</odoo>