                    <t t-set="new_line_height" t-value="4"/>
                    <t t-set="row_line_height" t-value="5"/>
                    <!--ಠ_ಠ Book custom-->
                    <t t-set="max_line_lenght" t-value="30"/>

                    <t t-set="break_line" t-value="o.get_break_line_02(max_body_height,new_line_height,row_line_height,max_line_lenght)"/>
                    <t t-set="start" t-value="0"/>
                    <t t-set="end" t-value="0"/>

                    <t t-foreach="range(0,len(break_line),1)" t-as="x">
                        <table style="height:180mm;font-family:TH SarabunPSK;
                    src:url(/itaas_print_inventory_report/static/THSarabun.ttf);" class="table table-bordered">
                            <thead style="font-size:20px; line-height:20px; text-align:center">
                                <tr>
                                    <th width="5%">ลำดับ</th>
                                    <th width="15%">รหัส</th>
                                    <th width="30%">ชื่อสินค้า</th>
                                    <th width="10%">จำนวน</th>
                                    <th width="10%">หน่วย</th>
                                    <th width="15%">Lot No.</th>
                                    <th width="15%">หมายเหตุ</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody" style="font-size:20px; line-height:18px;">
                                <t t-foreach="range(start,break_line[x],1)" t-as="y">
                                    <t t-if="(y+1)!=(break_line[x])">
                                        <tr height="35px">
                                            <td style="text-align:center">
                                                <div class="word_wrap">
                                                    <span t-esc="y+1"/>
                                                </div>
                                            </td>
                                            <td style="text-align:center">
                                                <div style="width:110px;" class="word_wrap">
                                                    <t t-if="o.move_lines[y].product_id.code">
                                                        <span t-field="o.move_lines[y].product_id.code"/>
                                                    </t>
                                                    <t t-if="not o.move_lines[y].product_id.code">
                                                        <span>-</span>
                                                    </t>
                                                </div>
                                            </td>
                                            <td>
                                                <div style="width:235px;" class="word_wrap">
                                                    <span t-field="o.move_lines[y].product_id.name"/>
                                                </div>
                                            </td>
                                            <td style="text-align:center">
                                                <div class="word_wrap">
                                                    <span t-esc="'{0:,.0f}'.format(float(o.move_lines[y].quantity_done))"/>
                                                </div>
                                            </td>
                                            <td style="text-align:center">
                                                <div class="word_wrap">
                                                    <span t-field="o.move_lines[y].product_uom.name"/>
                                                </div>
                                            </td>
                                            <td style="text-align:center">
                                                <div class="word_wrap">
                                                    <t t-foreach="o.move_lines[y].move_line_ids" t-as="z">
                                                        <t t-if="z.lot_id">
                                                            <span t-field="z.lot_id.name"/><br/>
                                                        </t>
                                                        <t t-if="not z.lot_id">
                                                            <span t-field="z.lot_name"/><br/>
                                                        </t>
                                                    </t>
                                                </div>
                                            </td>
                                            <td style="text-align:center">
                                                <div class="word_wrap">
                                                    <span t-field="o.notes"/>
                                                </div>
                                            </td>
                                        </tr>
                                    </t>
                                    <t t-if="(y+1)==(break_line[x])">
                                        <tr>
                                            <td style="text-align:center">
                                                <div class="word_wrap">
                                                    <span t-esc="y+1"/>
                                                </div>
                                            </td>
                                            <td style="text-align:center">
                                                <div style="width:110px;" class="word_wrap">
                                                    <t t-if="o.move_lines[y].product_id.code">
                                                        <span t-field="o.move_lines[y].product_id.code"/>
                                                    </t>
                                                    <t t-if="not o.move_lines[y].product_id.code">
