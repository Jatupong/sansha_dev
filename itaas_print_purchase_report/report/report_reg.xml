<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paperformat_A4_Zero_Margin_purchase" model="report.paperformat">
            <field name="name">A4_Zero_Margin_purchase</field>
            <field name="default" eval="False"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">95</field>
            <field name="margin_bottom">45</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">90</field>
            <field name="dpi">90</field>
        </record>

        <report
                id="purchase_order_report"
                model="purchase.order"
                menu="True"
                report_type="qweb-pdf"
                string="ใบสั่งซื้อ"
                paperformat="paperformat_A4_Zero_Margin_purchase"
                name="itaas_print_purchase_report.purchase_order_report_id"
                file="itaas_print_purchase_report.purchase_order_report_id"
                print_report_name="
                (object.state in ('draft', 'sent') and 'Request for Quotation - %s' % (object.name) or
                'Purchase Order - %s' % (object.name))"
        />

        <record id="paperformat_A4_Zero_Margin_purchase_temporary" model="report.paperformat">
            <field name="name">A4_Zero_Margin_purchase_temporary</field>
            <field name="default" eval="False"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">75</field>
            <field name="margin_bottom">45</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">70</field>
            <field name="dpi">90</field>
        </record>

        <report
                id="purchase_temporary_report"
                model="purchase.order"
                menu="True"
                report_type="qweb-pdf"
                string="ใบส่งของชั่วคราว"
                paperformat="paperformat_A4_Zero_Margin_purchase_temporary"
                name="itaas_print_purchase_report.purchase_temporary_report_id"
                file="itaas_print_purchase_report.purchase_temporary_report_id"
                print_report_name="
                (object.state in ('draft', 'sent') and 'Request for Quotation - %s' % (object.name) or
                'Purchase Order - %s' % (object.name))"
        />

        <report
                id="purchase_dummy_report"
                model="purchase.order"
                menu="False"
                report_type="qweb-pdf"
                string="ใบส่งของชั่วคราว (ระบุผู้ขาย)"
                paperformat="paperformat_A4_Zero_Margin_purchase_temporary"
                name="itaas_print_purchase_report.purchase_dummy_report_id"
                file="itaas_print_purchase_report.purchase_dummy_report_id"
                print_report_name="
                (object.state in ('draft', 'sent') and 'Request for Quotation - %s' % (object.name) or
                'Purchase Order - %s' % (object.name))"
        />

    </data>
</odoo>
