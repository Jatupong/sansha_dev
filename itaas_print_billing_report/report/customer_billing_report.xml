                    <!-- unit is mm --> <!-- max height a4 = 297, deduct margin and bottom 100, 50 and left 147, 30px per line then max = 15 line-->
                    <!--t t-set="max_body_line" t-value="15"-->
                    <!-- header of tbody take 2 new light = 15, then 147 - 15 = 132-->
                    <t t-set="max_body_height" t-value="110"/>
                    <t t-set="new_line_height" t-value="4"/>
                    <t t-set="row_line_height" t-value="5"/> <!--- 30px = 7.9375 mm -->
                    <t t-set="max_line_lenght" t-value="20"/>
                    <!--#############it may reduce to 30 from invoice as 40, due to it has code column-->


                    <t t-set="break_line" t-value="o.get_break_line_invoice(max_body_height,new_line_height,row_line_height,max_line_lenght)"/>
                    <t t-set="start" t-value="0"/>
                    <t t-set="end" t-value="0"/>
                    <t t-foreach="range(0,len(break_line),1)" t-as="x">
                        <table width="100%" style=" height:140mm; font-size:15px; border:1px solid black;                         font-family:TH SarabunPSK; src:url(/itaas_print_billing_report/static/THSarabun.ttf); font-size: 20px;">
                            <thead>
                                <tr style="height:30px;">
                                    <td width="8%" align="center" class="td_bott td_right" style="vertical-align: middle;"><font>ลำดับ<br/>No.</font></td>
                                    <td width="30%" align="center" class="td_bott td_right" style="vertical-align: middle;"><font>รายการใบแจ้งหนี้<br/>INVOICE</font> </td>
                                    <td width="13%" align="center" class="td_bott td_right" style="vertical-align: middle;"><font>วันที่ออกใบแจ้งหนี้<br/>INVOICE DATE</font> </td>
                                    <td width="13%" align="center" class="td_bott td_right" style="vertical-align: middle;"><font>ครบกำหนด<br/>DUE DATE</font> </td>
                                    <td width="12%" align="center" class="td_bott td_right" style="vertical-align: middle;"><font>อธิบายรายการ<br/>DESCRIPTION</font> </td>
                                    <td width="12%" align="center" class="td_bott td_right" style="vertical-align: middle;"><font>จำนวนเงิน<br/>AMOUNT</font> </td>
                                    <td width="12%" align="center" class="td_bott td_right" style="vertical-align: middle;"><font>จำนวนเงินวางบิล<br/>DUE AMOUNT</font> </td>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="range(start,break_line[x],1)" t-as="y">
                                    <t t-if="(y+1)!=(break_line[x])">
                                        <tr style="height:30px;">
                                            <td align="center" class="td_right"><span t-esc="y+1"/> </td>
                                            <td class="td_right">
                                                <div style="margin-left:10px;">
                                                    <span t-field="o.invoice_ids[y].name"/>
                                                </div>
                                            </td>
                                            <td align="left" class="td_right">
                                                &amp;nbsp;
                                                <span t-field="o.invoice_ids[y].invoice_date"/>
                                            </td>
                                            <td align="left" class="td_right">
                                                &amp;nbsp;
                                                <span t-field="o.invoice_ids[y].invoice_date_due"/>
                                            </td>
                                            <td align="right" class="td_right">
                                                <span t-field="o.invoice_ids[y].invoice_origin"/>
                                                &amp;nbsp;
                                            </td>

                                            <td align="right" class="td_right">
                                                <t t-if="o.invoice_ids[y].amount_total">
                                                    <span t-esc="'{0:,.2f}'.format(abs(float(o.invoice_ids[y].amount_total)))"/>
                                                </t>
                                                &amp;nbsp;
                                            </td>
                                            <td align="right" class="td_right">
                                                <span t-esc="'{0:,.2f}'.format(abs(float(o.invoice_ids[y].amount_residual)))"/>
                                                &amp;nbsp;
                                            </td>
                                        </tr>
                                    </t>
                                    <t t-if="(y+1)==(break_line[x])">
                                        <tr>
                                            <td align="center" class="td_right"><span t-esc="y+1"/> </td>
                                            <td class="td_right">
                                                <div style="margin-left:10px;">
                                                    <span t-field="o.invoice_ids[y].name"/>
                                                </div>
                                            </td>
                                            <td align="left" class="td_right">
                                                &amp;nbsp;
                                                <span t-field="o.invoice_ids[y].invoice_date"/>
                                            </td>
                                            <td align="left" class="td_right">
                                                &amp;nbsp;
                                                <span t-field="o.invoice_ids[y].invoice_date_due"/>
                                            </td>
                                            <td align="right" class="td_right">
                                                <span t-field="o.invoice_ids[y].invoice_origin"/>
                                                &amp;nbsp;
                                            </td>
                                            <td align="right" class="td_right">
                                                <t t-if="o.invoice_ids[y].amount_total">
                                                    <span t-esc="'{0:,.2f}'.format(abs(float(o.invoice_ids[y].amount_total)))"/>
                                                </t>&amp;nbsp;
                                            </td>
                                            <td align="right" class="td_right">
                                                <span t-esc="'{0:,.2f}'.format(abs(float(o.invoice_ids[y].amount_residual)))"/>
                                                &amp;nbsp;
                                            </td>
                                        </tr>
                                        <t t-set="end" t-value="(break_line[x])"/>
                                    </t>
                                </t>
                                <t t-set="start" t-value="break_line[x]"/>
                                <p style="page-break-after:always;"/>
                            </tbody>
                            <tfoot>
                                <tr style="height:30px;">
                                    <td colspan="5" rowspan="1" class="table4side">
                                        <t t-if="o.company_id.show_currency_on_billing">
                                            <span>&amp;nbsp;สกุลเงิน/Currency:</span>
                                            <span t-field="o.currency_id.name"/>
                                        </t>
                                        <br/>
                                        <span>&amp;nbsp;ตัวอักษร:</span>
                                        <t t-if="o.currency_id == o.company_id.currency_id">
                                            <t t-if="end ==(break_line[len(break_line)-1])">
                                                <span t-esc="o.baht_text(o.amount_total)"/>
                                            </t>
                                        </t>
                                        <t t-if="o.currency_id != o.company_id.currency_id">
                                            <t t-if="end ==(break_line[len(break_line)-1])">
                                                <span t-esc="o.num2_words(o.amount_total)"/>
                                            </t>
                                        </t>
                                    </td>
                                    <td colspan="1" class="table4side">
                                        <span>&amp;nbsp;รวมเป็นเงิน</span><br/>
                                        <span>&amp;nbsp;GRAND TOTAL</span>
                                    </td>
                                    <td colspan="1" style="text-align: right" class="table4side">
                                        <t t-if="o.amount_total">
                                            <span t-esc="'{0:,.2f}'.format(float(o.amount_total))"/>&amp;nbsp;
                                        </t>
                                    </td>
                                </tr>
                            </tfoot>
                            <t t-set="start" t-value="break_line[x]"/>
                            <p style="page-break-after:always;"/>
                        </table>
